            <controls:PivotItem Header="login">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>

                        <TextBlock Text="E-mail" Margin="12,0,0,0"/>
                        <TextBox x:Name="Email" Text="{Binding Email, Mode=TwoWay}"/>

                        <TextBlock Text="Password" Margin="12,0,0,0"/>
                        <PasswordBox x:Name="Password" Password="{Binding Password, Mode=TwoWay}" />

                    </StackPanel>

                    <StackPanel Grid.Row="1">
                    
                        <Button x:Name="Login" Content="Login" Click="Login_Click"/>

                        <Button x:Name="Refresh" Content="Refresh" Click="Refresh_Click"/>

                    </StackPanel>
                </Grid>

            </controls:PivotItem>
 
            <controls:PivotItem Header="agenda" Visibility="{Binding ShowAgenda}" x:Name="AgendaTab"> 

                <ListBox x:Name="Agenda" Margin="0,0,-12,0" ItemsSource="{Binding Agenda}" SelectionChanged="Agenda_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,17">
                                <TextBlock Text="{Binding Title}" TextWrapping="NoWrap" Margin="12,0,0,0" Style="{StaticResource PhoneTextLargeStyle}"/>
                                <TextBlock Text="{Binding Summary}" TextWrapping="NoWrap" Margin="12,-6,0,0" Style="{StaticResource PhoneTextSubtleStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
            </controls:PivotItem>
            
            <controls:PivotItem Header="tracks">

                <ListBox x:Name="Tracks" Margin="0,0,-12,0" ItemsSource="{Binding Tracks}" SelectionChanged="Tracks_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,17">
                                <TextBlock Text="{Binding Name}" TextWrapping="NoWrap" Margin="12,0,0,0" Style="{StaticResource PhoneTextLargeStyle}"/>
                                <TextBlock Text="{Binding Summary}" TextWrapping="NoWrap" Margin="12,-6,0,0" Style="{StaticResource PhoneTextSubtleStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </controls:PivotItem>

            <controls:PivotItem Header="speakers">

                <ListBox x:Name="Speakers" Margin="0,0,-12,0" ItemsSource="{Binding Speakers}" SelectionChanged="Speakers_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,17">
                                <TextBlock Text="{Binding Name}" TextWrapping="NoWrap" Margin="12,0,0,0" Style="{StaticResource PhoneTextLargeStyle}"/>
                                <TextBlock Text="{Binding Title}" TextWrapping="NoWrap" Margin="12,-6,0,0" Style="{StaticResource PhoneTextSubtleStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </controls:PivotItem>

        </controls:Pivot>
    </Grid>

</phone:PhoneApplicationPage>