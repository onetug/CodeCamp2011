<UserControl x:Class="CodeCamp.Pivot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Pivot="clr-namespace:System.Windows.Pivot;assembly=System.Windows.Pivot" 
             xmlns:local="clr-namespace:CodeCamp.Pivot"
             mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <local:CustomPivotViewer x:Name="SessionsPivot" 
                                         LinkClicked="SessionsPivot_LinkClicked"
                                         ItemDoubleClicked="SessionsPivot_ItemDoubleClicked"/>
        <TextBlock x:Name="ErrorMessage" Margin="20" FontSize="16" FontWeight="Bold" Foreground="OrangeRed" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
