<UserControl x:Class="CodeCamp.RIA.UI.Infrastructure.Controls.AgendaItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Button x:Name="AgendaButton" Margin="2" ClickMode="Press" Click="Button_Click" >

            <StackPanel>

                <TextBlock x:Name="Title" Text="{Binding Title}" Margin="3" FontWeight="Bold" Foreground="Black" />

                <TextBlock x:Name="Speaker" Text="{Binding Speaker}" Margin="3" Foreground="DarkGray"/>

                <TextBlock x:Name="Level" Text="{Binding Level}" Margin="3" Foreground="DarkGray"/>

            </StackPanel>

        </Button>
    </Grid>
</UserControl>
